<Window x:Class="Sh.Autofit.StickerPrinting.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Zebra Label Sticker Printing - S.H. Car Rubber"
        Height="720" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Printer Selection Section -->
        <GroupBox Grid.Row="0" Header="Printer Settings" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Printer:"/>
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding AvailablePrinters}"
                          SelectedItem="{Binding SelectedPrinter}"
                          MinWidth="200"/>

                <Button Grid.Column="2" Content="Refresh" Command="{Binding RefreshPrintersCommand}"/>
                <Button Grid.Column="3" Content="Check Status" Command="{Binding CheckPrinterStatusCommand}"/>

                <TextBlock Grid.Column="4"
                           Text="{Binding PrinterStatus.StatusMessage}"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontWeight="Bold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PrinterStatus.Status}" Value="Ready">
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PrinterStatus.Status}" Value="Error">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding PrinterStatus.Status}" Value="Offline">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </GroupBox>

        <!-- Main Content Tabs -->
        <TabControl Grid.Row="1" Margin="5" SelectedIndex="{Binding SelectedTabIndex}">
            <!-- Print on Demand Tab -->
            <TabItem Header="Print on Demand">
                <Grid Margin="5" DataContext="{Binding PrintOnDemandVM}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Item Key Input with AutoSuggest -->
                    <GroupBox Grid.Row="0" Header="Part Selection" Margin="0,0,0,5" Padding="3">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0">
                                <Label Content="Item Key:" Padding="2"/>
                                <Grid>
                                    <TextBox x:Name="ItemKeyTextBox"
                                             Text="{Binding ItemKey, UpdateSourceTrigger=PropertyChanged}"
                                             MinWidth="300" HorizontalAlignment="Left"
                                             Margin="2"
                                             PreviewKeyDown="ItemKeyTextBox_PreviewKeyDown"/>

                                    <!-- Dropdown Popup for suggestions -->
                                    <Popup IsOpen="{Binding IsDropdownOpen}"
                                           PlacementTarget="{Binding ElementName=ItemKeyTextBox}"
                                           Placement="Bottom"
                                           StaysOpen="False"
                                           Width="400">
                                        <Border BorderBrush="Gray" BorderThickness="1" Background="White">
                                            <ListBox x:Name="SuggestionsList"
                                                     ItemsSource="{Binding SearchResults}"
                                                     MaxHeight="200"
                                                     SelectedItem="{Binding SelectedSearchResult}"
                                                     PreviewKeyDown="SuggestionsList_PreviewKeyDown"
                                                     MouseDoubleClick="SuggestionsList_MouseDoubleClick">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding ItemKey}" FontWeight="Bold" Width="120"/>
                                                            <TextBlock Text=" - "/>
                                                            <TextBlock Text="{Binding PartName}" Foreground="Gray" TextTrimming="CharacterEllipsis" MaxWidth="230"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </StackPanel>

                            <Button Grid.Row="1" Content="Load Part" Command="{Binding LoadItemCommand}"
                                    HorizontalAlignment="Left" Margin="2,3,0,0" Padding="8,3"/>
                        </Grid>
                    </GroupBox>

                    <!-- Language Selection with Edit Arabic Button -->
                    <GroupBox Grid.Row="1" Header="Language" Margin="0,0,0,5" Padding="3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <RadioButton Content="Hebrew"
                                             IsChecked="{Binding SelectedLanguage, Converter={StaticResource LanguageConverter}, ConverterParameter=he}"
                                             GroupName="Language" Margin="2"/>
                                <RadioButton Content="Arabic"
                                             IsChecked="{Binding SelectedLanguage, Converter={StaticResource LanguageConverter}, ConverterParameter=ar}"
                                             GroupName="Language" Margin="2"/>
                            </StackPanel>

                            <!-- Edit/Add Arabic Button - only visible when Arabic selected and label loaded -->
                            <Button Grid.Column="1"
                                    Command="{Binding EditArabicCommand}"
                                    HorizontalAlignment="Right"
                                    Padding="8,3" FontSize="11" Margin="0"
                                    Visibility="{Binding CanEditArabicDescription, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="Content" Value="Edit Arabic Description"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentLabel.Description}" Value="">
                                                <Setter Property="Content" Value="Add Arabic Description"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentLabel.Description}" Value="{x:Null}">
                                                <Setter Property="Content" Value="Add Arabic Description"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </GroupBox>

                    <!-- Label Preview with Visual Preview Image -->
                    <GroupBox Grid.Row="2" Header="Label Preview" Margin="0,0,0,5" Padding="3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Input Fields -->
                            <StackPanel Grid.Column="0" DataContext="{Binding CurrentLabel}">
                                <Label Content="Intro Line:" Padding="2"/>
                                <TextBox Text="{Binding IntroLine, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding DataContext.CurrentLabel, RelativeSource={RelativeSource AncestorType=GroupBox}, Converter={StaticResource NullToBoolConverter}}"
                                         Margin="2"/>

                                <Label Content="Item Key:" Padding="2"/>
                                <TextBox Text="{Binding ItemKey}" IsReadOnly="True" Background="LightGray" Margin="2"/>

                                <Label Content="Description:" Padding="2"/>
                                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="{Binding ShouldShowDescription, Converter={StaticResource InverseBoolConverter}}"
                                         TextWrapping="Wrap" MinHeight="50" Margin="2"/>

                                <Label Content="Quantity:" Padding="2"/>
                                <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="80" HorizontalAlignment="Left" Margin="2"/>
                            </StackPanel>

                            <!-- Visual Preview Image -->
                            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1"
                                    Margin="10,0,0,0" Background="White" VerticalAlignment="Top">
                                <Image Source="{Binding PreviewImage}"
                                       Width="200" Height="100"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                            </Border>
                        </Grid>
                    </GroupBox>

                    <!-- Status and Success Note -->
                    <StackPanel Grid.Row="3" VerticalAlignment="Bottom" Margin="0,0,0,5">
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="Blue" FontStyle="Italic" Margin="2"/>

                        <!-- Success notification -->
                        <Border Background="#E8F5E9" CornerRadius="3" Padding="8,4" Margin="2,3,2,0"
                                Visibility="{Binding LastPrintedInfo, Converter={StaticResource StringToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#x2714;" Foreground="Green" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding LastPrintedInfo}" Foreground="Green"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Print Button with Spinner -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Print Label"
                                Command="{Binding PrintCommand}"
                                HorizontalAlignment="Left"
                                Padding="15,8" FontSize="13" FontWeight="Bold"
                                IsEnabled="{Binding IsPrinting, Converter={StaticResource InverseBoolConverter}}"/>

                        <!-- Spinner when printing -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding IsPrinting, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Ellipse Width="18" Height="18" StrokeThickness="2" Stroke="#2196F3"
                                     StrokeDashArray="2,1" RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="SpinnerRotation"/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPrinting}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                                             From="0" To="360" Duration="0:0:1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="Printing..." VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#2196F3"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Stock Move Tab -->
            <TabItem Header="הדפסה לפי תנועת מלאי">
                <Grid Margin="5" DataContext="{Binding StockMoveVM}" FlowDirection="RightToLeft">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Stock ID Input Section -->
                    <GroupBox Grid.Row="0" Header="טעינת תנועת מלאי" Margin="0,0,0,5" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="מספר תנועת מלאי:" Padding="2"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding StockIdInput, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="5,0"/>
                            <Button Grid.Column="2" Content="טען"
                                    Command="{Binding LoadStockCommand}"
                                    Padding="15,5"/>

                            <!-- Loading spinner -->
                            <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0"
                                        Visibility="{Binding IsLoadingStock, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Ellipse Width="18" Height="18" StrokeThickness="2" Stroke="#2196F3"
                                         StrokeDashArray="2,1" RenderTransformOrigin="0.5,0.5">
                                    <Ellipse.RenderTransform>
                                        <RotateTransform/>
                                    </Ellipse.RenderTransform>
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLoadingStock}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard RepeatBehavior="Forever">
                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                                                 From="0" To="360" Duration="0:0:1"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock Text="טוען..." VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#2196F3"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Stock Info Display -->
                    <GroupBox Grid.Row="1" Header="פרטי תנועה" Margin="0,0,0,5" Padding="5"
                              Visibility="{Binding HasStockLoaded, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="חשבון:"/>
                            <TextBlock Text="{Binding CurrentStockInfo.AccountName}" FontWeight="Bold" Margin="5,0,15,0"/>
                            <TextBlock Text="תאריך:"/>
                            <TextBlock Text="{Binding CurrentStockInfo.ValueDate, StringFormat=d}" FontWeight="Bold" Margin="5,0,15,0"/>
                            <TextBlock Text="הערות:"/>
                            <TextBlock Text="{Binding CurrentStockInfo.Remarks}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Global Controls & Items List -->
                    <GroupBox Grid.Row="2" Header="פריטים להדפסה" Margin="0,0,0,5" Padding="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Global Language Selection + Add Button -->
                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="שפה גלובלית:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <RadioButton Content="עברית" GroupName="GlobalLang"
                                                 IsChecked="{Binding GlobalLanguage, Converter={StaticResource LanguageConverter}, ConverterParameter=he}"/>
                                    <RadioButton Content="ערבית" GroupName="GlobalLang"
                                                 IsChecked="{Binding GlobalLanguage, Converter={StaticResource LanguageConverter}, ConverterParameter=ar}"/>
                                </StackPanel>

                                <Button Grid.Column="2" Content="הוסף פריט" Command="{Binding AddItemCommand}" Padding="10,5"/>
                            </Grid>

                            <!-- Scrollable Items List with Virtualization -->
                            <ListView Grid.Row="1" ItemsSource="{Binding Items}"
                                      VirtualizingStackPanel.IsVirtualizing="True"
                                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      BorderThickness="1" BorderBrush="LightGray">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10" Margin="0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="160"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Preview Image with Loading Indicator -->
                                                <Grid Grid.Column="0" Margin="0,0,15,0">
                                                    <Border BorderBrush="Gray" BorderThickness="1" Background="White">
                                                        <Image Source="{Binding PreviewImage}"
                                                               Width="140" Height="70"
                                                               Stretch="Uniform"
                                                               RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                                    </Border>
                                                    <!-- Preview loading spinner -->
                                                    <Ellipse Width="24" Height="24" StrokeThickness="2" Stroke="#2196F3"
                                                             StrokeDashArray="2,1" RenderTransformOrigin="0.5,0.5"
                                                             HorizontalAlignment="Center" VerticalAlignment="Center"
                                                             Visibility="{Binding IsLoadingPreview, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <Ellipse.RenderTransform>
                                                            <RotateTransform/>
                                                        </Ellipse.RenderTransform>
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsLoadingPreview}" Value="True">
                                                                        <DataTrigger.EnterActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard RepeatBehavior="Forever">
                                                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                                                                     From="0" To="360" Duration="0:0:1"/>
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </DataTrigger.EnterActions>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>
                                                </Grid>

                                                <!-- Item Details -->
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding ItemKey}" FontWeight="Bold" FontSize="14"/>
                                                    <TextBlock Text="{Binding Description}" TextTrimming="CharacterEllipsis"
                                                               Foreground="Gray" MaxWidth="300" Margin="0,3,0,0"/>

                                                    <!-- Quantity & Language Controls -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                        <TextBlock Text="כמות:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                        <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                                                 Width="60" Margin="0,0,15,0"/>

                                                        <TextBlock Text="שפה:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                        <RadioButton Content="עברית"
                                                                     IsChecked="{Binding Language, Converter={StaticResource LanguageConverter}, ConverterParameter=he}"
                                                                     GroupName="{Binding ItemKey}"/>
                                                        <RadioButton Content="ערבית"
                                                                     IsChecked="{Binding Language, Converter={StaticResource LanguageConverter}, ConverterParameter=ar}"
                                                                     GroupName="{Binding ItemKey}"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Action Buttons -->
                                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <!-- Edit Arabic Button - only visible for Arabic language -->
                                                    <Button Content="ערוך ערבית" Padding="8,4" Margin="0,0,5,0"
                                                            Command="{Binding DataContext.EditArabicCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                            CommandParameter="{Binding}"
                                                            Visibility="{Binding CanEditArabic, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                                    <!-- Delete Button -->
                                                    <Button Content="X" Padding="8,4" Foreground="Red" FontWeight="Bold"
                                                            Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                            CommandParameter="{Binding}"
                                                            ToolTip="הסר פריט"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </GroupBox>

                    <!-- Status Bar -->
                    <StackPanel Grid.Row="3" Margin="0,5,0,5">
                        <TextBlock Text="{Binding StatusMessage}" Foreground="Blue" FontStyle="Italic"/>

                        <!-- Print Progress Bar -->
                        <Grid Visibility="{Binding IsPrinting, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ProgressBar Grid.Column="0" Minimum="0" Maximum="{Binding PrintTotal}"
                                         Value="{Binding PrintProgress}" Height="20"/>
                            <TextBlock Grid.Column="1" Text="{Binding PrintProgressText}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>

                    <!-- Print All Button -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="הדפס הכל"
                                Command="{Binding PrintAllCommand}"
                                Padding="20,10" FontSize="14" FontWeight="Bold"
                                IsEnabled="{Binding IsPrinting, Converter={StaticResource InverseBoolConverter}}"/>

                        <!-- Printing spinner -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding IsPrinting, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Ellipse Width="20" Height="20" StrokeThickness="2" Stroke="#2196F3"
                                     StrokeDashArray="2,1" RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPrinting}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                                             From="0" To="360" Duration="0:0:1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="מדפיס..." VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#2196F3"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
