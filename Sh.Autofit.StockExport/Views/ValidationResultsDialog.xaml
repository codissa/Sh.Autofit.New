<Window x:Class="Sh.Autofit.StockExport.Views.ValidationResultsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sh.Autofit.StockExport.Views"
        mc:Ignorable="d"
        Title="תוצאות אימות נתונים"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner"
        FlowDirection="RightToLeft"
        ResizeMode="CanResize">

    <Window.Resources>
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <local:ValidationStatusToIconConverter x:Key="ValidationStatusToIconConverter"/>
        <local:MultipleMatchesToVisibilityConverter x:Key="MultipleMatchesToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Summary Section -->
        <Border Grid.Row="0"
                BorderBrush="DarkGray"
                BorderThickness="0,0,0,2"
                Padding="0,0,0,15"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="סיכום:"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <TextBlock Text="{Binding SummaryText}"
                           FontSize="14"
                           Margin="0,0,0,5"/>

                <TextBlock Text="{Binding TotalQuantityText}"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="DarkGreen"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Problematic Items Label -->
        <TextBlock Grid.Row="1"
                   Text="פריטים הדורשים טיפול:"
                   FontSize="14"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   Visibility="{Binding ProblematicItems.Count, Converter={StaticResource CountToVisibilityConverter}}"/>

        <!-- Problematic Items DataGrid -->
        <Border Grid.Row="2"
                BorderBrush="Gray"
                BorderThickness="1"
                Margin="0,0,0,20">
            <DataGrid ItemsSource="{Binding ProblematicItems}"
                      AutoGenerateColumns="False"
                      IsReadOnly="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      GridLinesVisibility="All"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <!-- Row Number -->
                    <DataGridTextColumn Header="שורה"
                                       Binding="{Binding RowNumber}"
                                       Width="60"
                                       IsReadOnly="True"/>

                    <!-- Status Icon -->
                    <DataGridTemplateColumn Header="סטטוס"
                                           Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ValidationStatus, Converter={StaticResource ValidationStatusToIconConverter}}"
                                          FontSize="16"
                                          HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Raw SH Code -->
                    <DataGridTextColumn Header="קוד SH"
                                       Binding="{Binding RawShCode}"
                                       Width="100"
                                       IsReadOnly="True"/>

                    <!-- Raw OEM Code -->
                    <DataGridTextColumn Header="קוד OEM"
                                       Binding="{Binding RawOemCode}"
                                       Width="120"
                                       IsReadOnly="True"/>

                    <!-- Manual SH Code Input -->
                    <DataGridTemplateColumn Header="קוד ידני"
                                           Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding ManualShCode, UpdateSourceTrigger=PropertyChanged}"
                                        Padding="5"
                                        BorderBrush="LightGray"
                                        BorderThickness="1"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Resolved Item Key -->
                    <DataGridTextColumn Header="קוד זוהה"
                                       Binding="{Binding ResolvedItemKey}"
                                       Width="100"
                                       IsReadOnly="True"/>

                    <!-- Quantity -->
                    <DataGridTextColumn Header="כמות"
                                       Binding="{Binding Quantity}"
                                       Width="80"
                                       IsReadOnly="True"/>

                    <!-- Validation Message -->
                    <DataGridTextColumn Header="הודעה"
                                       Binding="{Binding ValidationMessage}"
                                       Width="*"
                                       IsReadOnly="True"/>

                    <!-- Action Buttons -->
                    <DataGridTemplateColumn Header="פעולה"
                                           Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                           HorizontalAlignment="Center">
                                    <!-- Select Button (only for MultipleOemMatches) -->
                                    <Button Content="בחר..."
                                           Command="{Binding DataContext.SelectOemMatchCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                           CommandParameter="{Binding}"
                                           Width="60"
                                           Height="25"
                                           Margin="0,0,5,0"
                                           Visibility="{Binding ValidationStatus, Converter={StaticResource MultipleMatchesToVisibilityConverter}}"/>

                                    <!-- Retry Button -->
                                    <Button Content="נסה שוב"
                                           Command="{Binding DataContext.RetryValidationCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                           CommandParameter="{Binding}"
                                           Width="70"
                                           Height="25"
                                           Margin="0,0,5,0"
                                           Background="LightBlue"/>

                                    <!-- Delete Button -->
                                    <Button Content="מחק"
                                           Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                           CommandParameter="{Binding}"
                                           Width="50"
                                           Height="25"
                                           Background="LightCoral"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="המשך לייצוא"
                    
                    IsDefault="True"
                    Width="120"
                    Height="40"
                    Margin="0,0,10,0"
                    FontWeight="Bold"
                    Click="ContinueButton_Click"/>
            <Button Content="ביטול"
                    
                    IsCancel="True"
                    Width="100"
                    Height="40"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
