<Window x:Class="Sh.Autofit.StockExport.Views.OemMatchSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sh.Autofit.StockExport.Views"
        mc:Ignorable="d"
        Title="בחירת קוד מקורי"
        Height="450"
        Width="600"
        WindowStartupLocation="CenterOwner"
        FlowDirection="RightToLeft"
        ResizeMode="NoResize">

    <Window.Resources>
        <local:SelectionToBackgroundConverter x:Key="SelectionToBackgroundConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   FontSize="14"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap">
            <Run Text="בחירת קוד מקורי עבור קוד OEM: "/>
            <Run Text="{Binding OemCode}"
                 Foreground="DarkBlue"/>
        </TextBlock>

        <!-- Instruction -->
        <TextBlock Grid.Row="1"
                   Text="נמצאו מספר התאמות, אנא בחר את הקוד הנכון:"
                   FontSize="12"
                   Margin="0,0,0,15"/>

        <!-- Matches List -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,20">
            <ItemsControl ItemsSource="{Binding MatchedParts}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray"
                               BorderThickness="1"
                               Padding="10"
                               Margin="0,0,0,10"
                               Background="{Binding IsSelected, Converter={StaticResource SelectionToBackgroundConverter}}">
                            <RadioButton GroupName="PartSelection"
                                        IsChecked="{Binding IsSelected}"
                                        Command="{Binding DataContext.SelectPartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}">
                                <RadioButton.Content>
                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayText}"
                                                  FontWeight="Bold"
                                                  FontSize="13"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding DetailsText}"
                                                  FontSize="11"
                                                  Foreground="Gray"/>
                                    </StackPanel>
                                </RadioButton.Content>
                            </RadioButton>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="בחר"
                    IsDefault="True"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="SelectButton_Click"/>
            <Button Content="דלג"
                    IsCancel="True"
                    Width="100"
                    Height="35"
                    Click="SkipButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
