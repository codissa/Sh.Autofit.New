<UserControl x:Class="Sh.Autofit.New.PartsMappingUI.Views.MappingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400"
             FlowDirection="RightToLeft"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Statistics -->
        <Border Grid.Row="0" Background="White" Padding="15" Margin="0,0,0,10"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="ðŸ“Š ×¡×˜×˜×™×¡×˜×™×§×”:" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock VerticalAlignment="Center" Margin="0,0,20,0">
                        <Run Text="×¨×›×‘×™×: "/>
                        <Run Text="{Binding MappedVehicles, Mode=OneWay}" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}"/>
                        <Run Text=" / "/>
                        <Run Text="{Binding TotalVehicles, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock VerticalAlignment="Center" Margin="0,0,20,0">
                        <Run Text="×—×œ×§×™×: "/>
                        <Run Text="{Binding MappedParts, Mode=OneWay}" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}"/>
                        <Run Text=" / "/>
                        <Run Text="{Binding TotalParts, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Foreground="Gray"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="ðŸ”„ ×¨×¢× ×Ÿ × ×ª×•× ×™×"
                        Command="{Binding LoadDataCommand}"
                        Style="{StaticResource PrimaryButton}"/>
            </Grid>
        </Border>

        <!-- Main Content - Split Panel -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Vehicles -->
            <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1" CornerRadius="4" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Vehicles Header -->
                    <TextBlock Grid.Row="0" Text="ðŸš— ×¨×›×‘×™×" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- Vehicles Filters -->
                    <Border Grid.Row="1" Background="#F9F9F9" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Search Box -->
                            <TextBox Grid.Row="0"
                                     Text="{Binding VehicleSearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8"
                                     Margin="0,0,0,8"
                                     FontSize="13">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Right">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="ðŸ” ×—×™×¤×•×© ×¨×›×‘×™×..."
                                                                          Foreground="Gray"
                                                                          Margin="0,0,5,0"
                                                                          FlowDirection="RightToLeft"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Filters Row 1 -->
                            <Grid Grid.Row="1" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Grid.Column="0"
                                          ItemsSource="{Binding AvailableManufacturers}"
                                          SelectedItem="{Binding SelectedVehicleManufacturer}"
                                          DisplayMemberPath="."
                                          Padding="8">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Style.Triggers>
                                                <Trigger Property="SelectedItem" Value="{x:Null}">
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>

                                <ComboBox Grid.Column="2"
                                          ItemsSource="{Binding AvailableVehicleCategories}"
                                          SelectedItem="{Binding SelectedVehicleCategory}"
                                          DisplayMemberPath="."
                                          Padding="8">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Style.Triggers>
                                                <Trigger Property="SelectedItem" Value="{x:Null}">
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>
                            </Grid>

                            <!-- Filters Row 2 -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <CheckBox Content="×œ× ×ž×ž×•×¤×™× ×‘×œ×‘×“"
                                              IsChecked="{Binding VehicleFilterUnmappedOnly}"
                                              Margin="0,0,15,0"
                                              VerticalAlignment="Center"/>
                                    <Button Content="×‘×—×¨ ×”×›×œ" Command="{Binding SelectAllVehiclesCommand}"
                                            Padding="8,4" Margin="0,0,5,0" FontSize="11"/>
                                    <Button Content="×‘×˜×œ ×‘×—×™×¨×”" Command="{Binding DeselectAllVehiclesCommand}"
                                            Padding="8,4" FontSize="11"/>
                                    <TextBlock Text="{Binding SelectedVehiclesCount, StringFormat='({0} × ×‘×—×¨×•)'}"
                                               Margin="10,0,0,0" VerticalAlignment="Center" Foreground="Gray"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="ðŸ“¦ ×ž×¤×” ×¢×¨×›×”"
                                            Command="{Binding MapKitCommand}"
                                            Padding="8,4"
                                            Margin="0,0,5,0"
                                            FontSize="11"
                                            Background="#FF9800"
                                            Foreground="White"
                                            BorderThickness="0"
                                            ToolTip="×ž×¤×” ×¢×¨×›×ª ×—×œ×§×™× ×©×œ×ž×” ×œ×¨×›×‘×™× × ×‘×—×¨×™×"/>
                                    <Button Content="ðŸ“‹ ×”×¢×ª×§ ×ž×™×¤×•×™"
                                            Command="{Binding CopyMappingCommand}"
                                            Padding="8,4"
                                            Margin="0,0,5,0"
                                            FontSize="11"
                                            ToolTip="×”×¢×ª×§ ×ž×™×¤×•×™ ×—×œ×§×™× ×ž×¨×›×‘ ×œ×¨×›×‘"/>
                                    <Button Content="âš™ï¸ ×”×¡×ª×¨ ×™×¦×¨× ×™×"
                                            Command="{Binding ManageExcludedManufacturersCommand}"
                                            Padding="8,4"
                                            FontSize="11"
                                            ToolTip="×”×¡×ª×¨ ×™×¦×¨× ×™× ×œ× ×¨×œ×•×•× ×˜×™×™×"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Vehicles TreeView -->
                    <TreeView Grid.Row="2"
                              ItemsSource="{Binding ManufacturerGroups}"
                              BorderThickness="0"
                              ScrollViewer.CanContentScroll="False"
                              VirtualizingPanel.IsVirtualizing="False">
                        <TreeView.ItemTemplate>
                            <!-- Manufacturer Level -->
                            <HierarchicalDataTemplate ItemsSource="{Binding CommercialNameGroups}">
                                <StackPanel Orientation="Horizontal" Margin="0,3">
                                    <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding DisplayName, Mode=OneWay}" FontWeight="Bold" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                                <HierarchicalDataTemplate.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem">
                                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                    </Style>
                                </HierarchicalDataTemplate.ItemContainerStyle>
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <!-- Commercial Name Level -->
                                    <HierarchicalDataTemplate ItemsSource="{Binding ModelGroups}">
                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding DisplayName, Mode=OneWay}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center"/>
                                            <TextBlock Text=" ðŸ”„" FontSize="12" Margin="5,0,0,0"
                                                       Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                                       ToolTip="Loading..."/>
                                        </StackPanel>
                                        <HierarchicalDataTemplate.ItemContainerStyle>
                                            <Style TargetType="TreeViewItem">
                                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                            </Style>
                                        </HierarchicalDataTemplate.ItemContainerStyle>
                                        <HierarchicalDataTemplate.ItemTemplate>
                                            <!-- Model Name Level -->
                                            <HierarchicalDataTemplate ItemsSource="{Binding Vehicles}">
                                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                                    <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding DisplayName, Mode=OneWay}" FontWeight="Normal" FontSize="12" VerticalAlignment="Center"/>
                                                    <TextBlock Text=" ðŸ”„" FontSize="12" Margin="5,0,0,0"
                                                               Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                                               ToolTip="Loading..."/>
                                                </StackPanel>
                                                <HierarchicalDataTemplate.ItemTemplate>
                                            <!-- Vehicle Level -->
                                            <DataTemplate>
                                                <Border Padding="8,6" Margin="0,2" Background="#FAFAFA" CornerRadius="4"
                                                        BorderBrush="#E0E0E0" BorderThickness="1"
                                                        Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Checkbox and Status -->
                                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,10,0">
                                                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                            <TextBlock Text="{Binding StatusIcon, Mode=OneWay}" FontSize="14" VerticalAlignment="Center"/>
                                                        </StackPanel>

                                                        <!-- Vehicle Details -->
                                                        <StackPanel Grid.Column="1">
                                                            <!-- Main Info Line -->
                                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                                <TextBlock Text="{Binding ManufacturerDisplay, Mode=OneWay}" FontWeight="SemiBold" FontSize="12" Margin="0,0,10,0"/>
                                                                <TextBlock Text="{Binding ModelDisplay, Mode=OneWay}" FontWeight="SemiBold" FontSize="12"/>
                                                            </StackPanel>

                                                            <!-- Secondary Info -->
                                                            <WrapPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding YearDisplay, Mode=OneWay}" Foreground="#555" FontSize="11" Margin="0,0,12,0"/>
                                                                <TextBlock Text="{Binding CategoryDisplay, Mode=OneWay}" Foreground="#666" FontSize="11" Margin="0,0,12,0"
                                                                           Visibility="{Binding CategoryDisplay, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                                <TextBlock Text="{Binding FuelDisplay, Mode=OneWay}" Foreground="#666" FontSize="11" Margin="0,0,12,0"
                                                                           Visibility="{Binding FuelDisplay, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                                <TextBlock Text="{Binding EngineModelDisplay, Mode=OneWay}" Foreground="#666" FontSize="11" Margin="0,0,12,0"
                                                                           Visibility="{Binding EngineModelDisplay, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                                <TextBlock Text="{Binding EngineVolumeDisplay, Mode=OneWay}" Foreground="#666" FontSize="11" Margin="0,0,12,0"
                                                                           Visibility="{Binding EngineVolumeDisplay, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                                <TextBlock Text="{Binding TransmissionDisplay, Mode=OneWay}" Foreground="#666" FontSize="11" Margin="0,0,12,0"
                                                                           Visibility="{Binding TransmissionDisplay, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                                <TextBlock Text="{Binding TrimLevelDisplay, Mode=OneWay}" Foreground="#666" FontSize="11" Margin="0,0,12,0"
                                                                           Visibility="{Binding TrimLevelDisplay, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                            </WrapPanel>

                                                            <!-- Parts Count -->
                                                            <TextBlock Text="{Binding PartsCountDisplay, Mode=OneWay}" Foreground="Gray" FontSize="10" Margin="0,3,0,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                                </HierarchicalDataTemplate.ItemTemplate>
                                            </HierarchicalDataTemplate>
                                        </HierarchicalDataTemplate.ItemTemplate>
                                    </HierarchicalDataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>

            <!-- Right Panel - Parts -->
            <Border Grid.Column="2" Background="White" BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1" CornerRadius="4" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Parts Header -->
                    <TextBlock Grid.Row="0" Text="ðŸ”§ ×—×œ×§×™×" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- Parts Filters -->
                    <Border Grid.Row="1" Background="#F9F9F9" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Search Box -->
                            <TextBox Grid.Row="0"
                                     Text="{Binding PartSearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8"
                                     Margin="0,0,0,8"
                                     FontSize="13">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Right">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="ðŸ” ×—×™×¤×•×© ×—×œ×§×™×..."
                                                                          Foreground="Gray"
                                                                          Margin="0,0,5,0"
                                                                          FlowDirection="RightToLeft"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Category Filter -->
                            <ComboBox Grid.Row="1"
                                      ItemsSource="{Binding AvailablePartCategories}"
                                      SelectedItem="{Binding SelectedPartCategory}"
                                      DisplayMemberPath="."
                                      Padding="8"
                                      Margin="0,0,0,8">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Style.Triggers>
                                            <Trigger Property="SelectedItem" Value="{x:Null}">
                                                <Setter Property="Foreground" Value="Gray"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>

                            <!-- Checkboxes and Buttons -->
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                    <CheckBox Content="Unmapped Only"
                                              IsChecked="{Binding PartFilterUnmappedOnly}"
                                              Margin="0,0,10,0"
                                              VerticalAlignment="Center"/>
                                    <CheckBox Content="Universal Only"
                                              IsChecked="{Binding PartFilterUniversalOnly}"
                                              Margin="0,0,15,0"
                                              VerticalAlignment="Center"/>
                                    <Button Content="Select All" Command="{Binding SelectAllPartsCommand}"
                                            Padding="8,4" Margin="0,0,5,0" FontSize="11"/>
                                    <Button Content="Deselect All" Command="{Binding DeselectAllPartsCommand}"
                                            Padding="8,4" FontSize="11"/>
                                    <TextBlock Text="{Binding SelectedPartsCount, StringFormat='({0} selected)'}"
                                               Margin="10,0,0,0" VerticalAlignment="Center" Foreground="Gray"/>
                                </StackPanel>

                                <!-- Suggestion Controls -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal">
                                    <Button Content="ðŸ’¡ Suggest Parts"
                                            Command="{Binding CalculateSuggestionsCommand}"
                                            Padding="10,4"
                                            Margin="0,0,5,0"
                                            FontSize="11"
                                            Background="#E3F2FD"
                                            ToolTip="Calculate relevance for selected vehicle(s)"/>
                                    <Button Content="Clear"
                                            Command="{Binding ClearSuggestionsCommand}"
                                            Padding="8,4"
                                            Margin="0,0,10,0"
                                            FontSize="11"
                                            Visibility="{Binding SuggestionsEnabled, Converter={StaticResource BoolToVisibilityConverter}}"
                                            ToolTip="Clear suggestions"/>
                                    <CheckBox Content="Show Suggested First"
                                              IsChecked="{Binding ShowSuggestedPartsFirst}"
                                              VerticalAlignment="Center"
                                              Visibility="{Binding SuggestionsEnabled, Converter={StaticResource BoolToVisibilityConverter}}"
                                              ToolTip="Sort by relevance score"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Parts ListView -->
                    <ListView Grid.Row="2"
                              ItemsSource="{Binding FilteredParts}"
                              BorderThickness="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="0,2" Background="#FAFAFA" CornerRadius="4"
                                        BorderBrush="#E0E0E0" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0"
                                                  IsChecked="{Binding IsSelected}"
                                                  VerticalAlignment="Top"
                                                  Margin="0,0,10,0"/>

                                        <StackPanel Grid.Column="1">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <TextBlock Text="{Binding StatusIcon, Mode=OneWay}" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding StockStatusIcon, Mode=OneWay}" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding UniversalIcon, Mode=OneWay}" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding PartNumber}" FontWeight="Bold"/>
                                                <!-- Suggestion Indicator -->
                                                <Border Background="#FFD54F"
                                                        Padding="4,2"
                                                        Margin="8,0,0,0"
                                                        CornerRadius="3"
                                                        Visibility="{Binding HasSuggestion, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SuggestionIcon, Mode=OneWay}" FontSize="10" Margin="0,0,3,0"/>
                                                        <TextBlock Text="{Binding RelevanceScoreDisplay, Mode=OneWay}" FontSize="10" FontWeight="Bold"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding PartName}" Foreground="#555" TextWrapping="Wrap"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding Category}" FontSize="11" Foreground="Gray" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding MappedVehiclesCount, Mode=OneWay, StringFormat='×ž×ž×•×¤×” ×œ-{0} ×¨×›×‘×™×'}"
                                                           FontSize="11" Foreground="Gray"/>
                                            </StackPanel>
                                            <!-- Suggestion Reason -->
                                            <TextBlock Text="{Binding RelevanceReason}"
                                                       FontSize="10"
                                                       Foreground="#FF6F00"
                                                       FontStyle="Italic"
                                                       Margin="0,3,0,0"
                                                       TextWrapping="Wrap"
                                                       Visibility="{Binding HasSuggestion, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            <!-- OEM Numbers Section -->
                                            <StackPanel Margin="0,4,0,0" Visibility="{Binding HasOemNumbers, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="OEM Numbers:" FontSize="10" Foreground="#666" FontWeight="SemiBold" Margin="0,0,0,2"/>
                                                <ItemsControl ItemsSource="{Binding OemNumbers}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="#E8F5E9"
                                                                    BorderBrush="#4CAF50"
                                                                    BorderThickness="1"
                                                                    CornerRadius="3"
                                                                    Padding="6,3"
                                                                    Margin="0,0,5,3"
                                                                    Cursor="Hand"
                                                                    ToolTip="Click to copy"
                                                                    MouseLeftButtonDown="OemNumber_Click">
                                                                <TextBlock Text="{Binding}"
                                                                           FontSize="10"
                                                                           Foreground="#2E7D32"
                                                                           FontFamily="Consolas"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer - Action Buttons -->
        <Border Grid.Row="2" Background="White" Padding="15" Margin="0,10,0,0"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="âœ… ×ž×™×¤×•×™ ×”× ×‘×—×¨×™×"
                        Command="{Binding MapSelectedCommand}"
                        Style="{StaticResource SuccessButton}"
                        Width="150"
                        Height="40"
                        FontSize="14"
                        Margin="0,0,10,0"/>
                <Button Content="âŒ ×‘×™×˜×•×œ ×ž×™×¤×•×™"
                        Command="{Binding UnmapSelectedCommand}"
                        Style="{StaticResource DangerButton}"
                        Width="150"
                        Height="40"
                        FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="White" Padding="30" CornerRadius="8"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="â³ Loading..." FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
