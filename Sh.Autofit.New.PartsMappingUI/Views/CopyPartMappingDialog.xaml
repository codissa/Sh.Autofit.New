                                            <VisualBrush Stretch="None" AlignmentX="Right">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="ðŸ” ×—×¤×© ×—×œ×§×™ ×™×¢×“..."
                                                              Foreground="Gray"
                                                              Margin="0,0,5,0"
                                                              FlowDirection="RightToLeft"/>
