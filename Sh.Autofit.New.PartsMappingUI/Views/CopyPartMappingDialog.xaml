                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>
        </Border>

        <ListBox x:Name="TargetPartList"
                 Grid.Row="4"
                 Margin="0,0,0,15"
                 SelectionMode="Multiple">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="8" Margin="2" Background="#FAFAFA" CornerRadius="3" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" FontSize="12">
                                <Run Text="{Binding PartNumber}"/>
                                <Run Text=" - "/>
                                <Run Text="{Binding PartName}"/>
                            </TextBlock>
                            <TextBlock Foreground="#555" FontSize="11">
                                <Run Text="×§×˜×’×•×¨×™×”: "/>
