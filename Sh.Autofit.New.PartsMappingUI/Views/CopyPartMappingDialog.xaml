            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Target Parts Section -->
        <Border Grid.Row="3" Background="#FFF0F5" Padding="10" Margin="0,0,0,10" CornerRadius="4">
            <StackPanel>
