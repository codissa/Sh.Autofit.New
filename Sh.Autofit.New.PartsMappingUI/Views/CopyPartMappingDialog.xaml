                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>
        </Border>

        <ListBox x:Name="SourcePartList"
                 Grid.Row="2"
                 Margin="0,0,0,10"
                 SelectionMode="Single"
                 SelectionChanged="SourcePartList_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="8" Margin="2" Background="#FAFAFA" CornerRadius="3" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" FontSize="12">
                                <Run Text="{Binding PartNumber}"/>
                                <Run Text=" - "/>
                                <Run Text="{Binding PartName}"/>
