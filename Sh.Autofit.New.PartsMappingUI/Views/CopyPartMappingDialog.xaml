                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Right">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="ðŸ” ×—×¤×© ×—×œ×§ ×ž×§×•×¨..."
                                                              Foreground="Gray"
                                                              Margin="0,0,5,0"
                                                              FlowDirection="RightToLeft"/>
