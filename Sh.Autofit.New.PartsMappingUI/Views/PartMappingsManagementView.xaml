                                                              Margin="0,0,5,0"
                                                              FlowDirection="RightToLeft"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Parts List -->
                <ListBox Grid.Row="3"
                         ItemsSource="{Binding FilteredParts}"
                         SelectedItem="{Binding SelectedPart}"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10"
                                    Margin="0,2"
                                    Background="#FAFAFA"
                                    CornerRadius="4"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" FontSize="13">
                                        <Run Text="{Binding PartNumber}"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding PartName}"
                                              Foreground="#666"
                                              FontSize="11"
                                              Margin="0,3,0,0"
                                              TextWrapping="Wrap"
                                              MaxHeight="40"/>
                                    <TextBlock Foreground="Gray" FontSize="10" Margin="0,3,0,0">
                                        <Run Text="×§×˜×’×•×¨×™×”: "/>
                                        <Run Text="{Binding Category}"/>
                                        <Run Text=" | ×¨×›×‘×™×: "/>
                                        <Run Text="{Binding MappedVehicleCount, Mode=OneWay}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Right Panel - Mapped Vehicles -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Part Details Header -->
            <Border Grid.Row="0"
                    Background="#F5F5F5"
                    Padding="15"
                    Margin="0,0,0,15"
                    CornerRadius="4">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedPart}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Main Info -->
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock FontSize="18" FontWeight="Bold">
                            <Run Text="{Binding SelectedPart.PartNumber}"/>
                            <Run Text=" - "/>
                            <Run Text="{Binding SelectedPart.PartName}"/>
                        </TextBlock>
                        <TextBlock Text="{Binding SelectedPart.Category}"
                                  Foreground="#666"
                                  FontSize="13"
                                  Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Price & Stock Info -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                        <TextBlock FontSize="12" Foreground="#666" Margin="0,0,15,0">
                            <Run Text="×ž×—×™×¨: "/>
                            <Run Text="{Binding SelectedPart.RetailPrice, StringFormat='{}{0:N2}'}"/>
                            <Run Text=" â‚ª"/>
                        </TextBlock>
                        <TextBlock FontSize="12" Foreground="#666">
                            <Run Text="×ž×œ××™: "/>
                            <Run Text="{Binding SelectedPart.StockQuantity, StringFormat='{}{0:N0}'}"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- OEM Numbers -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0"
                               Visibility="{Binding SelectedPart.HasOemNumbers, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="×ž×¡×¤×¨×™ OEM:" FontSize="11" Foreground="#888" Margin="0,0,0,3"/>
                        <TextBlock Text="{Binding SelectedPart.OemNumbersDisplay}"
                                  FontSize="11"
                                  Foreground="#444"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="1"
                       Orientation="Horizontal"
                       Margin="0,0,0,10">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedPart}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <Button Content="âž• ×”×•×¡×£ ×¨×›×‘×™×"
                        Command="{Binding AddVehicleMappingsCommand}"
                        Padding="12,6"
                        Margin="0,0,10,0"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="12"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45A049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock Text="{Binding StatusMessage}"
                          VerticalAlignment="Center"
                          Foreground="#666"
                          FontSize="12"
                          Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Mapped Vehicles DataGrid -->
            <DataGrid Grid.Row="2"
                     ItemsSource="{Binding MappedVehiclesView}"
                     AutoGenerateColumns="False"
                     IsReadOnly="True"
                     CanUserAddRows="False"
                     SelectionMode="Single"
                     GridLinesVisibility="Horizontal"
                     HeadersVisibility="Column"
                     AlternatingRowBackground="#F9F9F9">
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedPart}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Style>
                <DataGrid.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock FontWeight="Bold" FontSize="13" Foreground="#2196F3" Margin="5">
                                    <Run Text="{Binding Name, Mode=OneWay}"/>
                                    <Run Text=" (" Foreground="Gray"/>
                                    <Run Text="{Binding ItemCount, Mode=OneWay}" Foreground="Gray"/>
                                    <Run Text=")" Foreground="Gray"/>
                                </TextBlock>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="{x:Type GroupItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type GroupItem}">
                                            <Expander IsExpanded="True" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,2">
                                                <Expander.Header>
                                                    <ContentPresenter />
                                                </Expander.Header>
                                                <ItemsPresenter />
                                            </Expander>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>
                    </GroupStyle>
                </DataGrid.GroupStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="×™×¦×¨×Ÿ" Binding="{Binding ManufacturerShortName}" Width="80"/>
                    <DataGridTextColumn Header="×“×’×" Binding="{Binding ModelName}" Width="120"/>
                    <DataGridTextColumn Header="×©× ×ž×¡×—×¨×™" Binding="{Binding CommercialName}" Width="100"/>
                    <DataGridTextColumn Header="×©× ×”" Binding="{Binding YearFrom}" Width="60"/>
                    <DataGridTextColumn Header="× ×¤×— ×ž× ×•×¢" Binding="{Binding EngineVolume}" Width="80"/>
                    <DataGridTextColumn Header="×¡×•×’ ×“×œ×§" Binding="{Binding FuelTypeName}" Width="80"/>
                    <DataGridTextColumn Header="×ª×™×‘×ª ×”×™×œ×•×›×™×" Binding="{Binding TransmissionType}" Width="90"/>
                    <DataGridTextColumn Header="×ž×¨×›×‘" Binding="{Binding FinishLevel}" Width="70"/>
                    <DataGridTextColumn Header="×¨×ž×ª ×’×™×ž×•×¨" Binding="{Binding TrimLevel}" Width="80"/>
                    <DataGridTemplateColumn Header="×¤×¢×•×œ×•×ª" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="ðŸ—‘ï¸"
                                       Command="{Binding DataContext.RemoveVehicleMappingCommand,
                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       CommandParameter="{Binding}"
                                       Background="#F44336"
                                       Foreground="White"
                                       BorderThickness="0"
                                       Padding="8,4"
                                       Cursor="Hand"
                                       ToolTip="×”×¡×¨ ×ž×™×¤×•×™">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                               CornerRadius="3"
                                                               Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#D32F2F"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Empty State -->
            <Border Grid.Row="2"
                   Background="White"
                   BorderBrush="#E0E0E0"
                   BorderThickness="2"
                   CornerRadius="8"
                   Padding="40">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedPart}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”§" FontSize="72" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="×‘×—×¨ ×—×œ×§ ×ž×”×¨×©×™×ž×” ×œ×¦×¤×™×™×” ×•×¢×¨×™×›×ª ×ž×™×¤×•×™×™×"
                              FontSize="18"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Foreground="#666"/>
                </StackPanel>
            </Border>

            <!-- Suggestions Section Header -->
            <Border Grid.Row="3"
                   Background="#FFFEF3"
                   BorderBrush="#FFC107"
                   BorderThickness="0,1,0,0"
                   Padding="10"
                   Margin="0,15,0,0">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SuggestedVehicles.Count}">
                                <DataTrigger.Value>
                                    <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">0</sys:Int32>
                                </DataTrigger.Value>
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¡ ×”×¦×¢×•×ª ×ž×™×¤×•×™"
                              FontSize="14"
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SuggestedVehicles.Count, StringFormat='({0})'}"
                              FontSize="12"
                              Foreground="#666"
                              Margin="5,0,0,0"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="- ×¨×›×‘×™× ×“×•×ž×™× ×”×ž×•×ž×œ×¦×™× ×œ×ž×™×¤×•×™"
                              FontSize="11"
                              Foreground="#888"
                              Margin="10,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Suggested Vehicles DataGrid -->
            <DataGrid Grid.Row="4"
                     ItemsSource="{Binding SuggestedVehicles}"
                     AutoGenerateColumns="False"
                     IsReadOnly="True"
                     CanUserAddRows="False"
                     SelectionMode="Single"
                     GridLinesVisibility="Horizontal"
                     HeadersVisibility="Column"
                     Background="#FFFEF3"
                     AlternatingRowBackground="#FFF9E6">
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SuggestedVehicles.Count}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Style>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="×™×¦×¨×Ÿ" Binding="{Binding ManufacturerShortName}" Width="80"/>
                    <DataGridTextColumn Header="×“×’×" Binding="{Binding ModelName}" Width="110"/>
                    <DataGridTextColumn Header="×©× ×ž×¡×—×¨×™" Binding="{Binding CommercialName}" Width="90"/>
                    <DataGridTextColumn Header="×©× ×”" Binding="{Binding YearFrom}" Width="60"/>
                    <DataGridTextColumn Header="× ×¤×— ×ž× ×•×¢" Binding="{Binding EngineVolume}" Width="75"/>
                    <DataGridTextColumn Header="×¡×•×’ ×“×œ×§" Binding="{Binding FuelTypeName}" Width="75"/>
                    <DataGridTextColumn Header="×ª×™×‘×ª ×”×™×œ×•×›×™×" Binding="{Binding TransmissionType}" Width="80"/>
                    <DataGridTextColumn Header="×ž×¨×›×‘" Binding="{Binding FinishLevel}" Width="60"/>
                    <DataGridTextColumn Header="×¨×ž×ª ×’×™×ž×•×¨" Binding="{Binding TrimLevel}" Width="70"/>
                    <DataGridTextColumn Header="×¡×™×‘×”" Binding="{Binding SuggestionReason}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#FF8C00"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="×¤×¢×•×œ×•×ª" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="âœ“ ××©×¨"
                                       Command="{Binding DataContext.AcceptSuggestionCommand,
                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       CommandParameter="{Binding}"
                                       Background="#4CAF50"
                                       Foreground="White"
                                       BorderThickness="0"
                                       Padding="8,4"
                                       Cursor="Hand"
                                       ToolTip="××©×¨ ×”×¦×¢×” ×•×”×•×¡×£ ×›×ž×™×¤×•×™ ×§×‘×•×¢">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                               CornerRadius="3"
                                                               Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#45A049"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Loading Indicator -->
            <ProgressBar Grid.Row="5"
                        IsIndeterminate="True"
                        Height="4"
                        Margin="0,10,0,0"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>
    </Grid>
</UserControl>
