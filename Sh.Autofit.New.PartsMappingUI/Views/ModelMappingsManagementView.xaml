                                       Command="{Binding DataContext.RemovePartFromModelCommand,
                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       CommandParameter="{Binding}"
                                       Background="#F44336"
                                       Foreground="White"
                                       BorderThickness="0"
                                       Padding="8,4"
                                       Cursor="Hand"
                                       ToolTip="×”×¡×¨ ×ž×”×“×’×">
