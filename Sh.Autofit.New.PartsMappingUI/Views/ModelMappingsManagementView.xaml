                    Padding="15"
                    Margin="0,0,0,15"
                    CornerRadius="4">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedModelGroup}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel>
                    <TextBlock FontSize="18" FontWeight="Bold">
                        <Run Text="{Binding SelectedModelGroup.ManufacturerShortName}"/>
                        <Run Text=" - "/>
                        <Run Text="{Binding SelectedModelGroup.ModelName}"/>
                    </TextBlock>
                    <TextBlock Foreground="#666"
                              FontSize="13"
