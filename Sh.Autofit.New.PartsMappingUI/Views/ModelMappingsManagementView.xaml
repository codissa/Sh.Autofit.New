                        <Run Text=" ×¨×›×‘×™×"/>
                        <Run Text=" | ×©× ×™×: "/>
                        <Run Text="{Binding SelectedModelGroup.YearFrom}"/>
                        <Run Text="-"/>
                        <Run Text="{Binding SelectedModelGroup.YearTo}"/>
