<Window x:Class="Sh.Autofit.New.PartsMappingUI.Views.PossibleMatchesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="כל ההתאמות האפשריות"
        Height="500" Width="900"
        WindowStartupLocation="CenterOwner"
        FlowDirection="RightToLeft"
        Background="#F5F5F5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="התאמות אפשריות"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <TextBlock Text="בחר את הרכב המתאים ביותר מהרשימה"
                       FontSize="13"
                       Foreground="#666"/>
        </StackPanel>

        <!-- Matches List -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="4">
            <DataGrid x:Name="MatchesDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="#F9F9F9"
                      MouseDoubleClick="MatchesDataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="יצרן" Binding="{Binding ManufacturerName}" Width="150"/>
                    <DataGridTextColumn Header="קוד קצר" Binding="{Binding ManufacturerShortName}" Width="100"/>
                    <DataGridTextColumn Header="דגם" Binding="{Binding ModelName}" Width="*"/>
                    <DataGridTextColumn Header="שם מסחרי" Binding="{Binding CommercialName}" Width="150"/>
                    <DataGridTextColumn Header="שנים" Width="120">
                        <DataGridTextColumn.Binding>
                            <MultiBinding StringFormat="{}{0} - {1}">
                                <Binding Path="YearFrom" TargetNullValue="?"/>
                                <Binding Path="YearTo" TargetNullValue="?"/>
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="סוג דלק" Binding="{Binding FuelTypeName}" Width="100"/>
                    <DataGridTextColumn Header="קטגוריה" Binding="{Binding VehicleCategory}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0">
            <Button Content="✓ בחר רכב זה"
                    x:Name="SelectButton"
                    Click="SelectButton_Click"
                    IsEnabled="False"
                    Padding="20,10"
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="5"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCC"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="✗ ביטול"
                    Click="CancelButton_Click"
                    Padding="20,10"
                    FontSize="14"
                    Margin="5"
                    Background="#F44336"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D32F2F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
